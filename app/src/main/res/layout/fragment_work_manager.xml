<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:id="@+id/btnStartOneTimeRequest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startOneTimeRequest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btnProgressWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/progress_worker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStartOneTimeRequest"/>

    <Button
            android:id="@+id/btnChainWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chain_work"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnProgressWorker"/>

</androidx.constraintlayout.widget.ConstraintLayout>